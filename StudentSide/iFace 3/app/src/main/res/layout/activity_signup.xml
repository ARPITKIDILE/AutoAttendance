<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signup">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="30dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/role_selection"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Role : "
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/role"
            />
    </LinearLayout>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email"
        android:id="@+id/email_id"
        android:layout_below="@+id/role_selection"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Password"
        android:id="@+id/password"
        android:layout_below="@+id/email_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:id="@+id/fname"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:id="@+id/lname"
        android:layout_below="@+id/fname"
        android:layout_centerHorizontal="true"
        />
    <!-- Student    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/student_section"
        android:orientation="vertical"
        android:layout_below="@+id/lname"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Roll number"
            android:inputType="number"
            android:id="@+id/rollno"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Semester"
            android:inputType="number"
            android:id="@+id/sem"
            android:layout_centerHorizontal="true"
            />

<!--        <EditText-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Div/Shift"-->
<!--            android:inputType="number"-->
<!--            android:id="@+id/div"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            />-->

    </LinearLayout>

    <!-- Teacher -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teacher_section"
        android:orientation="vertical"
        android:layout_below="@+id/lname"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Affiliation"
            android:inputType="text"
            android:id="@+id/affilation"
            android:layout_centerHorizontal="true"
            />
<!--        <EditText-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Class Semester"-->
<!--            android:inputType="number"-->
<!--            android:id="@+id/class_sem"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            />-->

<!--        <EditText-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Div/Shift"-->
<!--            android:inputType="number"-->
<!--            android:id="@+id/class_div"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            />-->

    </LinearLayout>

    <Button
        android:id="@+id/take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAKE PHOTO"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

        />
    <Button
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create account"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

        />

</LinearLayout>